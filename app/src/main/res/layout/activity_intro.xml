<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccentBlack"
    tools:context=".IntroActivity">

    <TextView
        android:id="@+id/txt_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kel"
        android:layout_margin="@dimen/dimen24"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font18"
        android:textColor="@color/colorMainWhite"
        android:text="@string/skip"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/screen_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent" >

    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
        app:tabBackground="@drawable/indicator_selector"
        android:id="@+id/tab_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:tabIndicatorHeight="@dimen/dimen0"
        app:tabRippleColor="@color/colorAccentBlack">

    </com.google.android.material.tabs.TabLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/dimen100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen24"
        android:layout_marginRight="@dimen/dimen24"
        android:layout_marginBottom="@dimen/dimen24"
        android:background="@color/colorLighterBlack"
        android:fontFamily="@font/kel"
        android:text="@string/next"
        android:textColor="@color/colorMainWhite"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="667dp" />

</LinearLayout>