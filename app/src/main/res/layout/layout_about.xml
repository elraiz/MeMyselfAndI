<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dimen4"
    android:layout_marginRight="@dimen/dimen4"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginTop="@dimen/dimen6"
        android:layout_marginRight="@dimen/dimen6"
        android:elevation="@dimen/dimen4"
        android:layout_alignParentRight="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen20"
        app:cardBackgroundColor="@color/colorLighterBlack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen24"
                android:layout_marginBottom="@dimen/dimen24">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginRight="@dimen/dimen20"
                    android:fontFamily="@font/kel"
                    android:textSize="@dimen/font16"
                    android:textStyle="bold"
                    android:textColor="@color/colorMainWhite"
                    android:textAlignment="center"
                    android:text="@string/appinfo"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen2"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:background="@color/colorMainRed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginRight="@dimen/dimen20"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:fontFamily="@font/kel"
                    android:textSize="@dimen/font16"
                    android:textStyle="bold"
                    android:textColor="@color/colorMainWhite"
                    android:textAlignment="center"
                    android:text="@string/appver"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginRight="@dimen/dimen20"
                    android:fontFamily="@font/kel"
                    android:textSize="@dimen/font16"
                    android:textStyle="bold"
                    android:textColor="@color/colorMainWhite"
                    android:textAlignment="center"
                    android:text="@string/appdev"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>